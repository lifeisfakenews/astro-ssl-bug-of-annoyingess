---

// export const prerender = false;

import Layout from "../layouts/Primary.astro";

---

<Layout title="404">
    <div class="grid col2 even gap-900">
        <div class="col">
            <svg viewBox="0 0 837 1045" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                    <path stroke="#007FB2" stroke-width="6" d="M353,9 L626.664028,170 L626.664028,487 L353,642 L79.3359724,487 L79.3359724,170 L353,9 Z"></path>
                    <path stroke="#EF4A5B" stroke-width="6" d="M78.5,529 L147,569.186414 L147,648.311216 L78.5,687 L10,648.311216 L10,569.186414 L78.5,529 Z"></path>
                    <path stroke="#795D9C" stroke-width="6" d="M773,186 L827,217.538705 L827,279.636651 L773,310 L719,279.636651 L719,217.538705 L773,186 Z"></path>
                    <path stroke="#F2773F" stroke-width="6" d="M639,529 L773,607.846761 L773,763.091627 L639,839 L505,763.091627 L505,607.846761 L639,529 Z"></path>
                    <path stroke="#36B455" stroke-width="6" d="M281,801 L383,861.025276 L383,979.21169 L281,1037 L179,979.21169 L179,861.025276 L281,801 Z"></path>
                </g>
            </svg>
        </div>
        <div class="col">
            <p class="t">404</p>
            <p class="d">This page is not found and only returned when `prerender` is exported as `false`</p>
        </div>
    </div>
</Layout>

<style>
    svg {
        width: 100%;
        height: 100%;
    }
    svg path {
        animation: float 1s infinite ease-in-out alternate;
    }
    svg path:nth-child(2) {
        animation-delay: .2s; 
    }
    svg path:nth-child(3) {
        animation-delay: .4s; 
    }
    svg path:nth-child(4) {
        animation-delay: .6s; 
    }
    svg path:nth-child(5) {
        animation-delay: .8s; 
    }

    @keyframes float {
        100% {
            translate: 0 2rem;
        }
    }

    .t {
        margin: 0;
        text-shadow: .2rem .2rem 1rem;
        font-size: 7.5rem;
        color: var(--vm-clr-primary-400);
    }
    .d {
        margin-block: 1rem;
    }
    .r {
        margin-bottom: 1rem;
        font-size: 1.4rem;
    }

    .a {
        background: var(--vm-clr-primary-400);
        border: none;
        border-radius: .3rem;
        padding: 1rem 2rem;
        font: inherit;
        text-decoration: none;
        font-weight: 500;
        color: var(--vm-clr-text-200);
        cursor: pointer;
    }
    .a:is(:hover, :focus-visible) {
        background: var(--vm-clr-primary-600);
        text-decoration: none;
    }
</style>